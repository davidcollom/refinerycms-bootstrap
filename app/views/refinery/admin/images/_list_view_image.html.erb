<li class='clearfix record <%= cycle("on", "on-hover") %>' id="sortable_<%= list_view_image.id %>">
  <span class='title'>
    <%= list_view_image.title %> <span class="preview">&nbsp;</span>
  </span>
  
  <div class='btn-toolbar pull-right'>
      <div class="btn-group">
      <%= link_to raw('<span class="glyphicon glyphicon-remove"></span>'),
                  refinery.admin_image_path(list_view_image),
                  :class => "btn btn-danger btn-small confirm-delete",
                  :title => t('delete', :scope => 'refinery.admin.images'),
                  :data => {
                    :confirm => t('message',
                      :scope => 'refinery.admin.delete',
                      :title => list_view_image.title
                    )
                  },
                  :method => :delete %>
      <%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span>'),
                  list_view_image.url,
                  :class => "btn btn-small",
                  :target => "_blank",
                  :title => t('view_live_html', :scope => 'refinery.admin.images') %>
      <%= link_to raw('<span class="glyphicon glyphicon-edit"></span>'),
                  refinery.edit_admin_image_path(list_view_image),
                  :class => "btn btn-small",
                  :title => t('edit', :scope => 'refinery.admin.images') %>
      </div>
  </div> 
</li>
